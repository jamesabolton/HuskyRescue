@using HuskyRescue.Web.HtmlHelpers
@model HuskyRescue.ViewModel.Admin.ResourceManager.ResourceCreate

@{
	ViewBag.Title = "Create";
}

@section scripts
{
	<script>
		//$("form").validate();
	</script>
}

<div class="row">
	<div class="large-12 columns">

		@using (Html.BeginForm("Create", "AdminIdentityResources", FormMethod.Post, new { id = "resourceCreate" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary(true)
			<div class="row">
				<div class="large-6 small-12 small-centered large-centered columns"><h2>Create New Resource</h2></div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					@Html.LabelTextBoxFor(m => m.Controller)
					@Html.ValidationMessageFor(m => m.Controller)

				</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelTextBoxFor(m => m.ControllerAction) @Html.ValidationMessageFor(m => m.ControllerAction)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelDropDownFor(m => m.Action, Model.Actions) @Html.ValidationMessageFor(m => m.Action)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelCheckboxFor(m => m.IsCreate)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelCheckboxFor(m => m.IsDelete)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelCheckboxFor(m => m.IsExecute)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelCheckboxFor(m => m.IsRead)</div>
			</div>
			<div class="row">
				<div class="large-12 columns">@Html.LabelCheckboxFor(m => m.IsUpdate)</div>
			</div>
			<div class="row">
				<div class="large-12 columns large-centered small-centered">
					<input type="submit" value="Create" class="button small success" />
					@*<a role="button"></a>*@
					@Html.ActionLink("Cancel", "Index", "AdminIdentityResources", new { @role = "button", @class = "button alert small" })

				</div>
			</div>
		}
	</div>
</div>