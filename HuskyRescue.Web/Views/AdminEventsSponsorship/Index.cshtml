@model IEnumerable<HuskyRescue.ViewModel.EventsSponsorship.List>

<div class="row">
	<div class="large-6 small-12 small-centered large-centered columns"><h2>All Event Sponsorships</h2></div>
</div>
<div class="row">
	<div class="large-12 columns">

		<p>
			@Html.ActionLink("Create New", "Create")
		</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.EventName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsDeleted)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Amount)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.NumberOfAllowedSponsors)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.NUmberOfSponsors)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.ActionLink(item.EventName, "Edit", "AdminEvents", new { @id = item.EventId })
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsDeleted)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Amount)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NumberOfAllowedSponsors)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NUmberOfSponsors)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Details", "Details", new { id = item.Id }) |
						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>
				</tr>
			}

		</table>
	</div>
</div>
